FROM golang:1.23-alpine AS builder

WORKDIR /app

# Install build dependencies
RUN apk add --no-cache git

# Copy go mod files
COPY go.mod go.sum* ./
RUN go mod download

# Copy source code
COPY . .

# Build the application
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o iotsense ./cmd/iotsense

# Final stage
FROM alpine:3.19

RUN apk --no-cache add ca-certificates tzdata

WORKDIR /app

# Copy binary from builder
COPY --from=builder /app/iotsense .

# Copy config file
COPY docker/iotsense.yaml /app/config.yaml

# Create non-root user
RUN adduser -D -g '' appuser
USER appuser

# Expose port
EXPOSE 3006

# Set environment variables
ENV CONFIG_PATH=/app/config.yaml
ENV ENVIRONMENT=production

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:3006/health || exit 1

# Run the application
CMD ["./iotsense"]
